@model ST10122162_Agri_Energy_Connect_Platform.Models.Farmer

@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h1 class="h3 mb-0">Delete Farmer</h1>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>Are you sure you want to delete this farmer? This will also delete all associated products.</p>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FarmName)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FarmName)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ContactNumber)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactNumber)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegistrationDate)</dt>
                        <dd class="col-sm-9">@Model.RegistrationDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-3">Products</dt>
                        <dd class="col-sm-9">@Model.Products.Count</dd>
                    </dl>
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
