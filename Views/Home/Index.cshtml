@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section text-white text-center py-5" style="background: linear-gradient(135deg, #2c3e50, #27ae60); width: 100vw; margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); position: relative; z-index: 1;">
    <div class="container py-5" style="position: relative; z-index: 5;">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown glow-text" style="color: #4ade80 !important; position: relative; z-index: 10; text-shadow: 0 0 15px rgba(78, 216, 96, 0.9), 0 0 30px rgba(78, 216, 96, 0.7), 0 0 45px rgba(78, 216, 96, 0.5);">
                    <i class="fas fa-leaf me-3 glow-icon"></i>Agri-Energy Connect Platform
                </h1>
                <p class="lead fs-3 mb-5 animate__animated animate__fadeInUp" style="position: relative; z-index: 10;">
                    Connecting farmers and energy markets for a sustainable future
                </p>
                <div class="d-flex justify-content-center gap-3 animate__animated animate__fadeInUp animate__delay-1s" style="position: relative; z-index: 10;">
                    <a class="btn btn-success btn-lg px-4 py-3 action-btn action-btn-success" asp-area="Identity" asp-page="/Account/Login">
                        <i class="fas fa-user-circle me-2"></i>Login Now
                    </a>
                    <a class="btn btn-outline-light btn-lg px-4 py-3" href="#about">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="wave-container" style="z-index: 1;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#ffffff" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,149.3C960,160,1056,160,1152,138.7C1248,117,1344,75,1392,53.3L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320L0,320Z"></path>
        </svg>
    </div>
</div>

<div class="container py-5">
    <!-- User Roles Section -->
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold mb-4" id="roles">
            <span class="border-bottom border-success border-3 pb-2 role-heading">Choose Your Role</span>
        </h2>
        <p class="lead text-muted mb-5">Our platform serves both farmers and employees with specialized features</p>
    </div>

    <div class="row mb-5 g-4">
        <div class="col-md-6">
            <div class="dashboard-card h-100 role-card farmer-card">
                <div class="card-header bg-success text-white">
                    <h2 class="h3 mb-0"><i class="fas fa-tractor me-2"></i>For Farmers</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="https://img.icons8.com/color/96/000000/farm.png" alt="Farmer Icon" class="img-fluid mb-3" style="height: 100px;">
                    </div>
                    <div class="features-list">
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon bg-success text-white rounded-circle p-2 me-3">
                                <i class="fas fa-plus"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Add Products</h5>
                                <p class="text-muted mb-0 small">Add your agricultural products to your profile</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon bg-success text-white rounded-circle p-2 me-3">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Track Inventory</h5>
                                <p class="text-muted mb-0 small">Monitor your product inventory efficiently</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon bg-success text-white rounded-circle p-2 me-3">
                                <i class="fas fa-plug"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Energy Markets</h5>
                                <p class="text-muted mb-0 small">Connect with potential energy market buyers</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="feature-icon bg-success text-white rounded-circle p-2 me-3">
                                <i class="fas fa-cogs"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Farm Management</h5>
                                <p class="text-muted mb-0 small">Manage your farm information and settings</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <div class="d-grid">
                        <a class="btn btn-success action-btn action-btn-success" asp-area="Identity" asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Login as Farmer
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card h-100 role-card employee-card">
                <div class="card-header bg-primary text-white">
                    <h2 class="h3 mb-0"><i class="fas fa-user-tie me-2"></i>For Employees</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="https://img.icons8.com/color/96/000000/manager.png" alt="Employee Icon" class="img-fluid mb-3" style="height: 100px;">
                    </div>
                    <div class="features-list">
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Add Farmers</h5>
                                <p class="text-muted mb-0 small">Register new farmer profiles in the system</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-search"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">View Products</h5>
                                <p class="text-muted mb-0 small">Browse all products from registered farmers</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="feature-icon bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-filter"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Filter Options</h5>
                                <p class="text-muted mb-0 small">Filter products by various criteria</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="feature-icon bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-tasks"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Platform Management</h5>
                                <p class="text-muted mb-0 small">Efficiently manage the entire platform</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <div class="d-grid">
                        <a class="btn btn-primary action-btn" asp-area="Identity" asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Login as Employee
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="dashboard-card mb-5" id="about">
        <div class="card-header bg-light">
            <h2 class="h3 mb-0"><i class="fas fa-info-circle me-2 text-primary"></i>About the Platform</h2>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h3 class="mb-4">Bridging Agriculture & Energy</h3>
                    <p class="lead">
                        The Agri-Energy Connect Platform is designed to bridge the gap between agricultural producers and energy markets.
                    </p>
                    <p>
                        Our platform enables farmers to showcase their products and connect with potential buyers in the energy sector.
                        By facilitating these connections, we aim to promote sustainable energy production and support local farmers
                        in finding new markets for their products.
                    </p>
                    <div class="d-flex mt-4">
                        <div class="me-4 text-center">
                            <div class="h1 text-success mb-1"><i class="fas fa-leaf"></i></div>
                            <h5>Sustainable</h5>
                        </div>
                        <div class="me-4 text-center">
                            <div class="h1 text-primary mb-1"><i class="fas fa-handshake"></i></div>
                            <h5>Collaborative</h5>
                        </div>
                        <div class="text-center">
                            <div class="h1 text-info mb-1"><i class="fas fa-globe"></i></div>
                            <h5>Innovative</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="https://images.unsplash.com/photo-1500382017468-9049fed747ef?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1000&q=80"
                         alt="Farm landscape" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </div>

    <!-- Login Info Section -->
    <div class="dashboard-card mb-4">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="fas fa-key me-2"></i>Sample Login Credentials</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-user-tie me-2 text-primary"></i>Employee Login</h5>
                            <p class="card-text mb-1"><strong>Email:</strong> employee@agrienergyconnect.com</p>
                            <p class="card-text"><strong>Password:</strong> Employee1!</p>
                            <div class="d-grid">
                                <a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login as Employee
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-tractor me-2 text-success"></i>Farmer Login</h5>
                            <p class="card-text mb-1"><strong>Email:</strong> farmer1@agrienergyconnect.com</p>
                            <p class="card-text"><strong>Password:</strong> Farmer1!</p>
                            <div class="d-grid">
                                <a class="btn btn-sm btn-success" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login as Farmer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        position: relative;
        overflow: hidden;
    }

    .wave-container {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        pointer-events: none;
    }

    .feature-icon {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .role-card {
        transition: transform 0.3s ease;
    }

    .role-card:hover {
        transform: translateY(-10px);
    }

    .farmer-card:hover {
        box-shadow: 0 10px 20px rgba(40, 167, 69, 0.2);
    }

    .employee-card:hover {
        box-shadow: 0 10px 20px rgba(0, 123, 255, 0.2);
    }

    /* Glowing text effect */
    .glow-text {
        text-shadow: 0 0 15px rgba(78, 216, 96, 0.9),
                     0 0 30px rgba(78, 216, 96, 0.7),
                     0 0 45px rgba(78, 216, 96, 0.5);
    }

    .glow-icon {
        color: #4ade80;
        text-shadow: 0 0 15px rgba(78, 216, 96, 0.9),
                     0 0 30px rgba(78, 216, 96, 0.7),
                     0 0 45px rgba(78, 216, 96, 0.5);
    }

    .role-heading {
        color: #198754;
        text-shadow: 0 0 5px rgba(78, 216, 96, 0.3);
        transition: all 0.3s ease;
    }

    .role-heading:hover {
        text-shadow: 0 0 10px rgba(78, 216, 96, 0.7);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 800);
                }
            });
        });
    </script>
}
